<div class="mt-4">
  <h3>SỬA NGƯỜI DÙNG</h3>
  <form
    class="mt-4"
    method="POST"
    action="/courses/users/{{user._id}}?_method=PUT"
  >
    <div class="form-group">
      <label for="username">Tên tài khoản</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{user.username}}"
        name="username"
        disabled={{true}}
      />
    </div>
    <div class="form-group">
      <label for="firstName">Tên</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{user.firstName}}"
        name="firstName"
      />
    </div>
    <div class="form-group">
      <label for="lastName">Họ</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{user.lastName}}"
        name="lastName"
      />
    </div>
    <div class="form-group">
      <label for="address">Địa chỉ</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{user.address}}"
        name="address"
      />
    </div>
    <div class="form-group">
      <label for="phoneNumber">SĐT</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{user.phoneNumber}}"
        name="phoneNumber"
      />
    </div>
    {{!-- <div class="form-group">
      <label for="videoID">Mã video</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{course.videoID}}"
        name="videoID"
      />
    </div> --}}

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="/me/users" class="btn btn-primary">Quay lại</a>
  </form>
</div>
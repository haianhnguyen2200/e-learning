<div class="mt-4">
  <h3>SỬA KHOÁ HỌC</h3>
  <form
    class="mt-4"
    method="POST"
    action="/courses/{{product.slug}}?_method=PUT"
  >
    <div class="form-group">
      <label for="name">Tên khoá học</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{product.name}}"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="price">Giá khoá học</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{product.price}}"
        name="price"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả khoá học</label>
      <textarea
        class="form-control"
        name="description"
      >{{product.description}}</textarea>
    </div>
    {{!-- <div class="form-group">
      <label for="videoID">Mã video</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        value="{{course.videoID}}"
        name="videoID"
      />
    </div> --}}

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="/me/stored/courses" class="btn btn-primary">Quay lại</a>
  </form>
</div>
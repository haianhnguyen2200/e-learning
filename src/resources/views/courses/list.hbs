<div class="courses-container">
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <nav class="category">
          <h3 class="category-heading">
              <i class="category-heading-icon ti-list"></i>
              Danh mục
          </h3>
          <ul class="category-list">
              <li class="category-item category-item--active">
                  <a href="#" class="category-item-link">TẤT CẢ KHOÁ HỌC</a>
              </li>
              <li class="category-item">
                  <a href="#" class="category-item-link">IELTS</a>
              </li>
              <li class="category-item">
                  <a href="#" class="category-item-link">TOEIC</a>
              </li>
              <li class="category-item">
                  <a href="#" class="category-item-link">TOEFL</a>
              </li>
              <li class="category-item">
                  <a href="#" class="category-item-link">APTIS</a>
              </li>
          </ul>
      </nav>
    </div>
    <div class="col-sm-8 col-lg-9">
    <div class="row mb-4">
  {{#each courses}}
        <div class="col-sm-6 col-lg-4">
          <div class="card">
            <a href="/courses/{{this.slug}}">
              <img class="card-img-top" src="{{this.image}}" alt="" />
            </a>
            <div class="card-body">
              <a href="/courses/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
              </a>
              <p class="card-text">{{this.description}}</p>
              <a href="#" class="btn btn-primary">Đăng kí học</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    </div>
  </div>  
</div>